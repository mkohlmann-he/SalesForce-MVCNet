<div id="DivData">
    <h2>Raw Data</h2>
    
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Age", "Filter", new { sortOrder = ViewBag.AgeSortParm })
                <!--@Html.DisplayNameFor(model => model.childAge)-->
            </th>
            <th>
                @Html.ActionLink("Country", "Filter", new { sortOrder = ViewBag.CountrySortParm })
                <!--@Html.DisplayNameFor(model => model.Country)-->
            </th>
            <th>
                @Html.ActionLink("State", "Filter", new { sortOrder = ViewBag.StateSortParam })
                <!--@Html.DisplayNameFor(model => model.State)-->
            </th>
            <th>
                @Html.ActionLink("City", "Filter", new { sortOrder = ViewBag.CitySortParam })
                <!--@Html.DisplayNameFor(model => model.City)-->
            </th>
            <th>
                @Html.ActionLink("Survey Responses", "Filter", new { sortOrder = ViewBag.ResponseSortParam })
                <!--@Html.DisplayNameFor(model => model.SurveyResponses)-->
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.childAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SurveyResponses)
                </td>
            </tr>
        }

    </table>
</div>

