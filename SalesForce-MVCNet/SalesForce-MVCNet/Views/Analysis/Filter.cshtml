    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="DivFilter">
    <div class="row">
        <div class="col-sm-6">
            <div class="row">
                <h2>Filter</h2>
            </div>
            <div class="row">
                <!-- Insert Fitlering controls Here! -->
                Insert Filtering controls Here!
                <div class="col-sm-1">
                    Age<br />
                    @Html.ListBox("ListBoxChildAge")
                    <br />
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="row">
                <h2>Graph</h2>
            </div>
            <div class="row">
